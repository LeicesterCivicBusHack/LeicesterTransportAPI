{% extends 'LeicesterCivicBusHackMistabusWebBundle:Default:base.html.twig' %}
{% block title %}Delay Hotspot{% endblock %}

{% block head_bottom %}
	{{ parent() }}
	<script type="text/javascript"
			  src="https://maps.googleapis.com/maps/api/js?libraries=visualization&key=AIzaSyBfmE6hEJkNP5_mPuD6MoxcKf7-9_pJkoY&sensor=false">
	</script>
	<script>
		function initialize() {
			var mapOptions = {
				zoom: 13,
				center: new google.maps.LatLng(52.653684,-1.132847)
			};

			var map = new google.maps.Map(document.getElementById('map-canvas'),	mapOptions);


			{% spaceless %}
			var heatmap = new google.maps.visualization.HeatmapLayer({
				data: [
					{% for row in delays %}
					{location: new google.maps.LatLng({{ row.latitude }}, {{ row.longitude }}), weight:1},
					{% endfor %}
				],
				dissipating:true,
				radius: 25
			});
			heatmap.setMap(map);
			{% endspaceless %}
		}

		google.maps.event.addDomListener(window, 'load', initialize);	</script>
{% endblock head_bottom %}

{% block content %}
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-primary" id="map-canvas" style="width: 100%; height: 1000px; background-color:#ccc;"></div>
		</div>
	</div>

{% endblock %}